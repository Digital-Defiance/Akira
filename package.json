{
  "name": "akira",
  "displayName": "Akira",
  "description": "Spec-driven development for GitHub Copilot Chat",
  "version": "0.1.0",
  "publisher": "Digital Defiance",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "spec",
        "name": "spec",
        "description": "Spec-driven development assistant",
        "isSticky": true
      }
    ],
    "configuration": {
      "title": "Akira",
      "properties": {
        "copilotSpec.specDirectory": {
          "type": "string",
          "default": ".kiro/specs",
          "description": "Directory where spec files are stored"
        },
        "copilotSpec.strictMode": {
          "type": "boolean",
          "default": false,
          "description": "Require all optional tasks to be completed"
        },
        "copilotSpec.propertyTestIterations": {
          "type": "number",
          "default": 100,
          "description": "Number of iterations for property-based tests"
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "specTreeView",
          "name": "Specs"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn build",
    "build": "node esbuild.js --production",
    "watch": "node esbuild.js --watch",
    "test": "vitest --run",
    "test:watch": "vitest",
    "lint": "eslint src --ext ts",
    "compile": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/ui": "^1.0.4",
    "esbuild": "^0.19.8",
    "eslint": "^8.54.0",
    "fast-check": "^3.15.0",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
